<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_chattisgarh"
    tools:context=".User.Mizoram">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mizoram"
        android:textSize="26sp"
        android:fontFamily="@font/sf_black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:padding="20dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Schools"
        android:textSize="16sp"
        android:fontFamily="@font/sf_black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:padding="25dp"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/school119"
        android:onClick="call_school119"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="#F4C2C2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#F4C2C2"
            android:onClick="call_school141"
            android:text="@string/school141"
            android:textAllCaps="false"
            android:textColor="@color/black" />

       <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F4C2C2"
        android:onClick="call_school142"
        android:text="@string/school142"
        android:textAllCaps="false"
        android:textColor="@color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#F4C2C2"
            android:onClick="call_school143"
            android:text="@string/school143"
            android:textAllCaps="false"
            android:textColor="@color/black" />


    </LinearLayout>

</RelativeLayout>